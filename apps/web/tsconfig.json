{
  "extends": "@fms/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@fms/types": ["../../packages/types/src"],
      "@fms/ui": ["../../packages/ui/src"],
      "@fms/ui/*": ["../../packages/ui/src/*"],
      "@fms/utils": ["../../packages/utils/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
